<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">


                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08"
                    android:textSize="64sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ekim"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="-10dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_marketName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="agaffajgajgbafjabfjkabfkaafbakjbakfagaffajgajgbafjabfjkabfkaafbakjbakfagaffajgajgbafjabfjkabfkaafbakjbakf"
                    android:layout_toLeftOf="@id/img"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="textStart"/>

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_orderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="agaffajgajgbafjabfjkabfkaafbakjbakfagaffajgajgbafjabfjkabfkaafbakjbakfagaffajgajgbafjabfjkabfkaafbakjbakf"
                    android:layout_toLeftOf="@id/tv_productPrice"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:textAlignment="textStart"/>

                <TextView
                    android:id="@+id/tv_productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 TL"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ln_productState"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@android:color/holo_purple"
                    android:orientation="vertical"/>

                <TextView
                    android:id="@+id/tv_productState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="agaffajgajgbafjabfjkabfkaafbakjbakfagaffajgajgbafjabfjkabfkaafbakjbakfagaffajgajgbafjabfjkabfkaafbakjbakf"
                    android:maxLines="1"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="22sp"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_summary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#D3D3D3"
        android:visibility="visible"
        android:animateLayoutChanges="true">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical">


            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_orderDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="agaffajgajgbafjabfjkabfkaafbakjbakfagaffajgajgbafjabfjkabfkaafbakjbakfagaffajgajgbafjabfjkabfkaafbakjbakf"
                    android:layout_toLeftOf="@id/tv_summaryPrice"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:textAlignment="textStart"
                    />

                <TextView
                    android:id="@+id/tv_summaryPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 TL"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>


    </LinearLayout>

</LinearLayout>

</LinearLayout>